
<p>
  <b>Name:</b>
  <%= @product.name %>
</p>

<p>
  <b>Price:</b>
  <%= @product.price %>
</p>

<p><strong>Comments:</strong></p>

<table>
  <% @comments.each do |comment| %>
    <tr>
      <td><p> - <%= comment.message %></p></td>
      <td><%= link_to "Edit", edit_product_comment_path(@product, comment) %></td>
      <td></td>
      <td></td>
    </tr>
  <% end %>
</table>

<table>
  <tr>
    <td><%= link_to 'Edit', edit_product_path(@product) %></td>
    <td><%= button_to 'Destroy', @product, method: :delete , data: {confirm: 'Are you sure?'} %></td>
    <td><%= link_to 'Back', products_path%></td>
  </tr>
</table>

<p>
  <%= link_to 'New Comment', new_product_comment_path(@product) %>
</p>
